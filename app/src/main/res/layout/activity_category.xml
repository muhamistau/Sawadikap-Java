<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Untuk kategori umur berapakah pakaian anda?"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/age_baby"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="Baby"
                android:focusable="true"
                android:src="@drawable/ic_crawling_baby_silhouette"
                android:tint="@color/unselected" />

            <ImageView
                android:id="@+id/age_child"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="Child"
                android:focusable="true"
                android:src="@drawable/ic_child_with_a_balloon"
                android:tint="@color/unselected" />

            <ImageView
                android:id="@+id/age_teen"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="Teenager"
                android:focusable="true"
                android:src="@drawable/ic_woman_standing_up"
                android:tint="@color/unselected" />

            <ImageView
                android:id="@+id/age_adult"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="Adult"
                android:focusable="true"
                android:src="@drawable/ic_man_silhouette"
                android:tint="@color/unselected" />

        </LinearLayout>

        <TextView
            android:id="@+id/ageText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Usia"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:gravity="center"
            android:text="Jenis pakaianmu?"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/category_t_shirt"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="T-Shirt"
                android:focusable="true"
                android:src="@drawable/ic_shirt"
                android:tint="@color/unselected" />

            <ImageView
                android:id="@+id/category_shirt"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="Shirt"
                android:focusable="true"
                android:src="@drawable/ic_t_shirt"
                android:tint="@color/unselected" />

            <ImageView
                android:id="@+id/category_dress"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="Dress"
                android:focusable="true"
                android:src="@drawable/ic_dress"
                android:tint="@color/unselected" />

            <ImageView
                android:id="@+id/category_jacket"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="Jacket"
                android:focusable="true"
                android:src="@drawable/ic_windbreaker"
                android:tint="@color/unselected" />

        </LinearLayout>

        <TextView
            android:id="@+id/categoryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Jenis"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:gravity="center"
            android:text="Untuk siapa pakaianmu?"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gender_male"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="Male"
                android:focusable="true"
                android:src="@drawable/ic_man_silhouette"
                android:tint="@color/unselected" />

            <ImageView
                android:id="@+id/gender_female"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="Female"
                android:focusable="true"
                android:src="@drawable/ic_women_silhouette"
                android:tint="@color/unselected" />

        </LinearLayout>

        <TextView
            android:id="@+id/genderText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Jenis kelamin"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:gravity="center"
            android:text="Ukuran pakaianmu?"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/size_s"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="S"
                android:focusable="true"
                android:gravity="center"
                android:text="S"
                android:textSize="16sp"
                android:tint="@color/unselected" />

            <TextView
                android:id="@+id/size_m"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="M"
                android:focusable="true"
                android:gravity="center"
                android:text="M"
                android:textSize="24sp"
                android:tint="@color/unselected" />

            <TextView
                android:id="@+id/size_l"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="L"
                android:focusable="true"
                android:gravity="center"
                android:text="L"
                android:textSize="36sp"
                android:tint="@color/unselected" />

            <TextView
                android:id="@+id/size_xl"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="XL"
                android:focusable="true"
                android:gravity="center"
                android:text="XL"
                android:textSize="48sp"
                android:tint="@color/unselected" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:gravity="center"
            android:text="Bagaimana kondisi pakaianmu?"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rating1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="1 Star"
                android:focusable="true"
                android:src="@drawable/ic_star_border_black_24dp"
                android:tint="@color/unselected" />

            <ImageView
                android:id="@+id/rating2"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="2 Star"
                android:focusable="true"
                android:src="@drawable/ic_star_border_black_24dp"
                android:tint="@color/unselected" />

            <ImageView
                android:id="@+id/rating3"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="3 Star"
                android:focusable="true"
                android:src="@drawable/ic_star_border_black_24dp"
                android:tint="@color/unselected" />

            <ImageView
                android:id="@+id/rating4"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="4 Star"
                android:focusable="true"
                android:src="@drawable/ic_star_border_black_24dp"
                android:tint="@color/unselected" />

            <ImageView
                android:id="@+id/rating5"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="5 Star"
                android:focusable="true"
                android:src="@drawable/ic_star_border_black_24dp"
                android:tint="@color/unselected" />

        </LinearLayout>

        <Button
            android:id="@+id/buttonLanjut"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:onClick="confirmationPageIntent"
            android:text="Lanjut"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent" />

    </LinearLayout>

</ScrollView>